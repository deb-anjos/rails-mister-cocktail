<!-- banner -->

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.7),rgba(0,0,0,0.7)),
     url(https://res.cloudinary.com/deb-anjos/image/upload/v1597529948/l54aunt09nyb2taqipdu.jpg);">
  <div class="container text-center align-middle">
    <div class="row justify-content-center">
      <div class="col-6">
        <h1 class="mt-4">Welcome to Debilicious!</h1>
        <p class="mt-4 mb-4">Find a drink. Create a drink. Have fun!</p>
        <a class="btn btn-success mr-2" href="/cocktails/new">Add a drink</a>
        <a class="btn btn-light" href="#selection">All Drinks</a>
      </div>
    </div>
  </div>
</div>

<!-- Selection -->

<nav class="navbar navbar-expand-lg navbar-light bg-light sticky-top border-bottom mb-4 border-primary" id="selection">
  <a class="nav-link" style="color: #167ffb" href="/">Home</a>
  <a class="nav-link text-right" style="color: #167ffb" href="/cocktails/new">Add New</a>
</nav>

<div class="container" style="height: 100vh">
  <div class="row justify-content-center">
    <div class="col">
      <div class="cards">
        <% @cocktails.each do |cocktail| %>
          <a href="/cocktails/<%= cocktail.id %>">
          <div class="card-category" style="height: 200px;
            background-size: cover;
            background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
            url(<%= cl_image_path cocktail.photo.key, height: 200, width: 300, crop: :fill %>)">
            <div id="cocktail-name"><%= cocktail.name %></div>
          </div>
          </a>
        <% end %>
    </div>
  </div>
</div>




