<nav class="navbar navbar-expand-lg navbar-light bg-light sticky-top border-bottom mb-4 border-primary" id="selection">
  <a class="nav-link" style="color: #167ffb" href="/">Home</a>
</nav>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-8">
      <h1 class="mb-4"><%= @cocktail.name %></h1>

      <div class="card-category" style="height: 200px;
        background-size: cover;
        background-repeat: no-repeat;
        background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
        url(<%= cl_image_path @cocktail.photo.key, height: 200, width: 750, crop: :fill %>)">
      </div>

      <ul class="list-group list-group-flush mb-4">
        <% @cocktail.doses.each do |dose| %>
        <li class="list-group-item">
          <%= dose.ingredient.name %>
          <%= dose.description %>
          <%= link_to 'delete', dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' } %>
        </li>
       <% end %>
      </ul>

      <a href="/cocktails/<%= @cocktail.id %>/doses/new" class="btn btn-primary">Add new ingredient</a>

    </div>
  </div>
</div>
